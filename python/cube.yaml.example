# Paths configuration
paths:
  worktree_base: "~/.cube/worktrees"
  sessions_dir: ".agent-sessions"

# Behavior settings
behavior:
  auto_commit: true
  auto_push: true
  auto_update: true
  session_recording_at_start: true
